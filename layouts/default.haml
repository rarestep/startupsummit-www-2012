!!! 5
%html{:lang => "en"}
  %head
    %meta{'http-equiv' => 'Content-Type', content: 'text/html; charset=utf-8'}/
    - if defined?(meta_description)
      %meta{ name: 'description', content: "#{meta_description}"}/
  
    %title= "Birmingham Startup Summit#{defined?(title) ? ' | ' + title : ''}"
    
    /[if lt IE 9]
      %script{ src: '//html5shim.googlecode.com/svn/trunk/html5.js' }
    
    / El Styles
    %link{ rel: 'stylesheet', type: 'text/css', href: '/css/startupsummit-www.css', media: 'all' }
    
    / El Favicon
    %link{ rel: 'icon shortcut', href: '/images/favicon.ico', type: 'image/x-icon' }

  %body
  
    / 
      Topbar & navigation
      \===================
    - active_nav_link = nil if !defined?(active_nav_link)
    .topbar{ 'data-scrollspy' => 'scrollspy' }
      .topbar-inner
        .container
          %a{ :class => 'brand', :href => "#{active_nav_link != :root ? '/' : '' }#overview" }
            Birmingham Startup Summit
          %ul.nav
            %li{ :class => "#{active_nav_link == :root ? 'active' : '' }" }
              %a{ :href => "#{active_nav_link != :root ? '/' : '' }#overview" } Overview
            %li
              %a{ :href => "#{active_nav_link != :root ? '/' : '' }#schedule" } Schedule
            %li
              %a{ :href => "#{active_nav_link != :root ? '/' : '' }#speakers" } Speakers
            %li{ :class => "#{active_nav_link == :apply ? 'active' : '' }" }
              %a{ :href => '/apply' } Apply
          %p.pull-right
            %strong
              Coming April 24th, 2012
    = yield
      
    %footer
      .container
        .row
          .span13
            %p
              / AddThis Button BEGIN
              .addthis_toolbox.addthis_default_style{ add_this_url_and_title }
                <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
                <a class="addthis_button_tweet" tw:via="bhamventure"></a>
                <a class="addthis_button_google_plusone" g:plusone:size="medium"></a>
                <a class="addthis_counter addthis_pill_style"></a>
              
              <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4ecbcad66f72d615"></script>
              / AddThis Button END
          .span3
            %h6 
              Made by
              %a{ href: 'http://www.rarestep.com', title: 'RareStep developed this website', class: 'external' }<
                RareStep
    
    / El Javascript
    = render_partial 'javascript_libs'
    %script{:src => '/js/application.js'}